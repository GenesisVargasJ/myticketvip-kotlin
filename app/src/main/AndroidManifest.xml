<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.dstic.myticketvip">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTicketVIP">
        <activity
            android:name=".ui.account.login.LoginActivity"
            android:label="@string/title_0"
            android:theme="@style/Theme.MyTicketVIP.NoActionBar" />
        <activity
            android:name=".ui.account.register.RegisterActivity"
            android:label="@string/title_1"
            android:theme="@style/Theme.MyTicketVIP.NoActionBar" />
        <activity
            android:name=".ui.account.recover.RecoverActivity"
            android:label="@string/title_2"
            android:theme="@style/Theme.MyTicketVIP.NoActionBar" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyTicketVIP.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.cart.detail.DetailActivity"
            android:label="@string/title_7">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>
        <activity
            android:name=".ui.cart.checkout.CheckoutActivity"
            android:label="@string/title_8">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.cart.detail.DetailActivity" />
        </activity>
    </application>

</manifest>